# AWS SES — email delivery
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_DEFAULT_REGION=us-east-1
SES_FROM_ADDRESS=stockwatch@yourdomain.com
SES_RECIPIENT_ADDRESSES=you@example.com,other@example.com

# X (Twitter) — optional digest post
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# OpenAI — optional LLM narrative (flag-gated)
OPENAI_API_KEY=your_openai_api_key

# Backblaze B2 — nightly backup
BACKBLAZE_KEY_ID=your_b2_key_id
BACKBLAZE_APPLICATION_KEY=your_b2_application_key
BACKBLAZE_BUCKET=your-bucket-name

# Feature flags
ENABLE_EMAIL=true
ENABLE_TWITTER=false
ENABLE_LLM=false
DRY_RUN=false

# Database
DB_PATH=/app/data/stockwatch.db
